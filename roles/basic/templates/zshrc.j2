function z_fzf() {
  z -I .
}

function ssh_select() {
  # If any parameters are passed, run ssh with those parameters
  if [ "$#" -ne 0 ]; then
    command ssh "$@"
    return $?
  fi
  SSH_CONFIG="$HOME/.ssh/config"
  HOSTS=$(grep -E '^\s*Host\s+' "$SSH_CONFIG" | awk '{print $2}')
  SELECTED_HOST=$(echo "$HOSTS" | fzf)
  if [ -n "$SELECTED_HOST" ]; then
    echo "Connecting to: $SELECTED_HOST..."
    print -S "ssh $SELECTED_HOST"
    ssh "$SELECTED_HOST"
  else
    echo "No host selected."
  fi
}

function count_files(){
  for dir in */; do
      count=$(find "$dir" -type f | wc -l)
      echo "$dir: $count"
  done | sort -t: -k2 -nr
}

function ff() ( #https://junegunn.github.io/fzf/tips/ripgrep-integration/
  RELOAD='reload:rg --column --color=always --smart-case {q} || :'
  OPENER='if [[ $FZF_SELECT_COUNT -eq 0 ]]; then
            vim {1} +{2}     # No selection. Open the current line in Vim.
          else
            vim +cw -q {+f}  # Build quickfix list for the selected items.
          fi'
  fzf --disabled --ansi --multi \
      --bind "start:$RELOAD" --bind "change:$RELOAD" \
      --bind "enter:become:$OPENER" \
      --bind "ctrl-o:execute:$OPENER" \
      --bind 'alt-a:select-all,alt-d:deselect-all,ctrl-/:toggle-preview' \
      --delimiter : \
      --preview '[[ {1} == *.md ]] && glow {1} || bat --style=full --color=always --highlight-line {2} {1}' \
      --preview-window '~4,+{2}+4/3,<80(up)' \
      --query "$*"
)

esp() {
  espanso match list | fzf | awk '{print $1}' | xargs -I {} espanso match exec -t {} | cat
}